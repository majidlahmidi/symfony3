{% extends '::base.html.twig' %}

{% block content %}


<a href="/todos/create_todo" class="btn btn-default">Nouvelle todo</a>
<table class="table table-striped"> 
<thead> <tr>  <th>Nom de la todo</th> <th>Description</th>  <th></th></th></tr> </thead> 
<tbody> 

	 {% for todo in todos %}
        <tr>  
            <td>{{todo.titre}}</td> <td>{{todo.description}}</td> 
            <td><a href="{{ path('todo_editer', { 'id': todo.id }) }}" class="btn btn-default">Modifier</a>
<a href="{{ path('todo_voir', { 'id': todo.id }) }}" class="btn btn-default">Voir</a>
            	<a href="{{ path('todo_supprimer', { 'id': todo.id }) }}" class="btn btn-danger">Supprimer</a> </td>
        </tr> 
     {% endfor %}

</tbody> 
</table>
	
{% endblock %}



